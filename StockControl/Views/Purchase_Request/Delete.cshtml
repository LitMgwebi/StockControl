@model StockControl.Models.Purchase_Request

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Html.DisplayFor(model => model.RequestID)?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RequestDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequestDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseRequestStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PurchaseRequestStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseRequestTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PurchaseRequestTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseRequestSubtotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PurchaseRequestSubtotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)

            @Html.DisplayFor(model => model.User.LastName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RequestID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <button class="btn btn-secondary"><a asp-action="Index">Cancel</a></button>
    </form>
</div>
