@model IEnumerable<StockControl.Models.Purchase_Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table"  id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrderTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrderSubtotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrderProgress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase_Request)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseOrderTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseOrderSubtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseOrderProgress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Purchase_Request.RequestID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
